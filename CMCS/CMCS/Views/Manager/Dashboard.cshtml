@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Manager Dashboard";
    var lecturerName = ViewBag.LecturerName ?? "";

    // Filter claims to only show CoordinatorApproved status
    var filteredClaims = Model.Where(c => c.Status == ClaimStatus.CoordinatorApproved).ToList();
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1>Manager Dashboard</h1>
        <p class="text-muted">Final approval and settlement of claims</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="stat-card stat-card-pending">
            <div class="display-6">@Model.Count(c => c.Status == ClaimStatus.Pending)</div>
            <p>Pending Review</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-waiting-manager">
            <div class="display-6">@filteredClaims.Count</div>
            <p>Coordinator Approved</p>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card stat-card-total">
            <div class="display-6">@filteredClaims.Count</div>
            <p>Total for Approval</p>
        </div>
    </div>
</div>

<!-- Filter Form -->
<form method="get" class="row g-2 mb-4">
    <div class="col-md-5">
        <input class="form-control" name="lecturerName" value="@lecturerName" placeholder="Filter by lecturer name..." />
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary" type="submit">Apply Filter</button>
        <a class="btn btn-outline-secondary" href="/Manager/Dashboard">Clear</a>
    </div>
</form>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Claims for Final Approval (@filteredClaims.Count)</h5>
    </div>
    <div class="card-body">
        @if (!filteredClaims.Any())
        {
            <div class="alert alert-info">No claims pending final approval.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Lecturer</th>
                            <th>Period</th>
                            <th>Workload</th>
                            <th>Amount</th>
                            <th>Submitted</th>
                            <th>Documents</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var claim in filteredClaims)
                        {
                            <tr>
                                <td>CL-@claim.ClaimId.ToString("D4")</td>
                                <td>@claim.User?.FirstName @claim.User?.LastName</td>
                                <td>@claim.Period</td>
                                <td>@claim.Workload hours</td>
                                <td>@claim.Amount.ToString("C")</td>
                                <td>@claim.SubmitDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @if (claim.Documents?.Any() == true)
                                    {
                                        <span class="badge bg-info">@claim.Documents.Count</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">None</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var badgeClass = claim.Status switch
                                        {
                                            ClaimStatus.Pending => "badge-pending",
                                            ClaimStatus.CoordinatorApproved => "badge-waiting-manager",
                                            ClaimStatus.Approved => "badge-approved",
                                            ClaimStatus.Rejected => "badge-rejected",
                                            _ => "bg-secondary"
                                        };
                                        var statusDisplay = claim.Status switch
                                        {
                                            ClaimStatus.Pending => "Pending Review",
                                            ClaimStatus.CoordinatorApproved => "Ready for Final Approval",
                                            ClaimStatus.Approved => "Approved",
                                            ClaimStatus.Rejected => "Rejected",
                                            _ => claim.Status.ToString()
                                        };
                                    }
                                    <span class="badge @badgeClass">
                                        @statusDisplay
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <form asp-action="FinalApprove" method="post" class="d-inline mb-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <button type="submit" class="btn btn-success btn-action">
                                                <i class="bi bi-check-circle me-1"></i>Final Approve
                                            </button>
                                        </form>

                                        <form asp-action="FinalReject" method="post" class="d-inline mb-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@claim.ClaimId" />
                                            <div class="reject-reason-container">
                                                <div class="input-group input-group-sm">
                                                    <input type="text" name="rejectionReason"
                                                           class="form-control"
                                                           placeholder="Rejection reason..."
                                                           required
                                                           style="min-width: 150px;" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-x-circle me-1"></i>Reject
                                                    </button>
                                                </div>
                                            </div>
                                        </form>

                                        <a href="@Url.Action("Details", "Claims", new { id = claim.ClaimId })"
                                           class="btn btn-info btn-action">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        min-width: 200px;
    }

    .btn-action {
        width: 100%;
        text-align: center;
        padding: 0.5rem 0.75rem;
        font-size: 0.875rem;
    }

    .reject-reason-container {
        width: 100%;
    }

        .reject-reason-container .input-group {
            width: 100%;
        }

        .reject-reason-container .form-control {
            flex: 1;
            min-width: 120px;
        }

    /* Ensure proper spacing in table cells */
    .table td {
        vertical-align: middle;
    }

    /* Status badges */
    .badge-pending {
        background: var(--warning-color) !important;
        color: #000000 !important;
    }

    .badge-approved {
        background: var(--success-color) !important;
        color: white !important;
    }

    .badge-rejected {
        background: var(--danger-color) !important;
        color: white !important;
    }

    .badge-waiting-manager {
        background: #17a2b8 !important;
        color: white !important;
    }
</style>